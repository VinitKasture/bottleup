<div class="contact d-flex justify-content-center " id="contact">
    <form class="glass" method="POST" action="/api/register">
        <h2><i class="fa-solid fa-user-plus"></i> Signup</h2>
        <%- include ("partials/messages"); %>
            <div class="box d-flex my-5">
                <label for="name">Full Name</label>
                <input type="name" name="name" id="name" value="<%= typeof name !=  'undefined' ? name: '' %>" placeholder="Enter Your Name">
            </div>
            <div class="box d-flex my-5">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Enter Email">
            </div>
            <div class="box d-flex my-5">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= typeof password !=  'undefined' ? password: '' %>" placeholder="Enter Password">
            </div>
            <div class="box d-flex my-5">
                <label for="password2">Confirm Your Password</label>
                <input type="password" name="password2" id="password2" value="<%= typeof password2 !=  'undefined' ? password2: '' %>" placeholder="Confirm Your Password">
            </div>
            <button type="submit" class="btn btn-info btn-block">Submit</button>
            <p class="lead mt-4">Already Registered? <a href="/api/login">Login!</a></p>
    </form>
</div>