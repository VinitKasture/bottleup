<div class="contact d-flex justify-content-center " id="contact">
    <form class="glass" method="POST" action="/api/login">
        <h2> <i class="fa-solid fa-arrow-right-to-bracket"></i> Login</h2>
        <%- include ("partials/messages"); %>
            <div class="box d-flex my-5">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Enter Email">
            </div>
            <div class="box d-flex my-5">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter Password">
            </div>
            <button type="submit" class="btn btn-info btn-block">Submit</button>
            <p class="lead mt-4">No Account? <a href="/api/register">Register!</a></p>
    </form>
</div>